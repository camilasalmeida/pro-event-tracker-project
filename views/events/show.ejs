<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/show.css" />
  <title><%= event.conferenceTitle %></title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="show-body">
        <div class="show-header">
               <h1><%= event.conferenceTitle %> promoted by <%= event.company %></h1>
        <div class="edit-button"> 
                <a href="/users/<%= user._id %>/events/<%= event._id %>/edit">         
                 Edit this Event
            </a>
        </div>
        <% if (event.company) { %>
            <p>Company: <%= event.company %></p>
            <% } %>
        <% if (event.conferenceTitle) { %>
            <p>Conference Title: <%= event.conferenceTitle %></p>
            <% } %>
        <% if (event.field) { %>
            <p>Field: <%= event.field %></p>
            <% } %>
        <% if (event.date) { %>
            <p>Date: <%= event.date %></p>
            <% } %>   
        <% if (event.location) { %>
            <p>Location: <%= event.location %></p>
            <% } %>
        <% if (event.principalSpeakers.length > 1) { %>
            <p>Principal Speakers: <%= event.principalSpeakers.join(', ') %></p>
            <% } %>
        <% if (event.eventLink) { %>
            <p>Link: <a href="<%= event.eventLink %>" target="_blank" rel="noopener noreferrer">Visit Conference Website </a></p>
            <% } %>
        <% if (event.status) { %>
            <p>Status: <%= event.status %></p>
            <% } %>
        <% if (event.personalNotes) { %>
        <p>Notes: <%= event.personalNotes %></p>
            <% } %>
<form                                                                                
action="/users/<%= user._id %>/events/<%= event._id %>?_method=DELETE" 
method="POST"
>
<button class="delete-button" type="submit">Delete this Event</button>
</form>
</div>
</div>
<%- include('../partials/_footer.ejs') %>  
</body>
</html>
